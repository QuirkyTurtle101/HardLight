<Control
    xmlns="https://spacestation14.io" HorizontalExpand="True"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <PanelContainer HorizontalExpand="True" MinWidth="200" Margin="5">
        <PanelContainer.PanelOverride>
            <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="5">
            <BoxContainer Orientation="Horizontal" Margin="5">
                <RichTextLabel Name="ConsentToggleNameLabel" />
                <Control HorizontalExpand="True" />
                <Button
                    Name="ConsentToggleOffButton"
                    ToggleMode="True"
                    Access="Public"
                    Text="Off"
                    StyleClasses="OpenRight" />
                <Button
                    Name="ConsentToggleOnButton"
                    ToggleMode="True"
                    Access="Public"
                    Text="On"
                    StyleClasses="OpenLeft" />
            </BoxContainer>
            <RichTextLabel Name="ConsentToggleDescriptionLabel" />
        </BoxContainer>
    </PanelContainer>
</Control>
